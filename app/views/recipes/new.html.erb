<%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :user %>
    <%= f.collection_select :user_id, User.all, :id, :name%>

    <%= f.label :ingredient_ids %>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>

    <%= f.submit %>
<% end %>